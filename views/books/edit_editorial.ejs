<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Editar Editorial - Biblioteca</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
      body {
        font-family: 'Poppins', sans-serif;
        background-color: #0f111b;
        color: #f0e6d2;
      }
      .sidebar {
        background-color: #15161d;
        min-height: 100vh;
        padding-top: 1rem;
        color: #f0e6d2;
        position: fixed;
        left: 0;
        top: 0;
        width: 230px;
        z-index: 1000;
        display: flex;
        flex-direction: column;
      }
      .brand {
        font-size: 1.7rem;
        font-family: 'Playfair Display', serif;
        font-weight: 700;
        padding-left: 1rem;
        margin-bottom: 2rem;
        color: #d4af37;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        justify-content: center;
      }
      .sidebar .nav-link,
      .sidebar .nav-link i {
        color: #f0e6d2;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.7rem;
        padding-left: 0.5rem;
        transition: background 0.3s, color 0.3s;
      }
      .sidebar .nav-link.active,
      .sidebar .nav-link:hover {
        background-color: #d4af37;
        color: #0f111b !important;
        border-radius: 5px;
      }
      .sidebar .nav-link.active i,
      .sidebar .nav-link:hover i {
        color: #0f111b !important;
      }
      .user-info {
        color: #f0e6d2;
        margin-bottom: 2rem;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
      .user-info i {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        color: #d4af37;
      }
      .user-info h5 {
        font-weight: 700;
        margin-bottom: 0.2rem;
        color: #fff;
        font-size: 1.3rem;
        width: 100%;
        text-align: center;
      }
      .user-info small {
        color: #d4af37;
        font-size: 1rem;
        font-weight: 500;
        letter-spacing: 0.5px;
        width: 100%;
        text-align: center;
      }
      .logout-link,
      .logout-link:visited {
        color: #ff5252 !important;
        font-weight: 500;
        border-radius: 5px;
        margin-top: 2rem;
        display: flex;
        align-items: center;
        gap: 0.7rem;
        padding: 0.8rem 1.2rem;
        transition: background 0.3s, color 0.3s;
        text-decoration: none;
        font-size: 1.08rem;
      }
      .logout-link:hover,
      .logout-link:focus {
        background-color: #d4af37;
        color: #15161d !important;
      }
      .logout-link:hover i,
      .logout-link:focus i {
        color: #15161d !important;
      }
      main {
        margin-left: 230px;
        width: calc(100% - 230px);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        background: transparent;
        padding: 2rem 2rem;
        box-sizing: border-box;
        max-width: 1400px;
        margin-left: auto;
        margin-right: auto;
      }
      .dashboard-header {
        background: #1a1b23;
        color: #f0e6d2;
        padding: 1.5rem 3rem;
        border-radius: 1rem;
        margin: 2rem auto 1.5rem auto;
        display: flex;
        align-items: center;
        gap: 1rem;
        justify-content: center;
        width: 95%;
        max-width: 1400px;
        text-align: center;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
      }
      .dashboard-header h2 {
        margin: 0;
        font-weight: 600;
        font-size: 2rem;
      }
      .card {
        background-color: #1a1b23;
        border: none;
        border-radius: 1rem;
        box-shadow: 0 4px 16px rgba(0,0,0,0.18);
        width: 100%;
        max-width: 1100px;
        margin: 0 auto;
        padding: 2.5rem 3rem;
      }
      .form-label {
        color: #d4af37;
        font-weight: 500;
        letter-spacing: 0.5px;
      }
      .form-control,
      .form-select,
      textarea {
        background-color: #15161d;
        color: #f0e6d2;
        border: 1.5px solid #d4af37;
        border-radius: 7px;
        font-size: 1.08rem;
      }
      .form-control:focus,
      .form-select:focus,
      textarea:focus {
        background-color: #23243a;
        border-color: #d4af37;
        color: #f0e6d2;
        box-shadow: 0 0 0 0.18rem rgba(212, 175, 55, 0.18);
      }
      .btn-primary {
        background-color: #d4af37;
        border: none;
        color: #0f111b;
        font-weight: 700;
        font-size: 1.08rem;
        padding: 0.6rem 2rem;
        border-radius: 8px;
        letter-spacing: 0.5px;
        transition: background 0.2s, color 0.2s;
      }
      .btn-primary:hover {
        background-color: #b6932a;
        color: #fff;
      }
      .btn-danger {
        background-color: #2f2f38;
        border: none;
        color: #f0e6d2;
        font-weight: 600;
        border-radius: 8px;
        font-size: 1.08rem;
        padding: 0.6rem 2rem;
      }
      .btn-danger:hover {
        background-color: #1f2028;
        color: #fff;
      }
      .alert-danger {
        background-color: #661111;
        border-color: #aa2e2e;
        color: #f8d7da;
      }
      .alert-danger .btn-close {
        filter: invert(1);
      }
      .footer {
        background-color: #15161d;
        color: #d4af37;
        font-size: 0.9rem;
        margin-top: 3rem;
        padding: 1rem 0;
        text-align: center;
        border-top: 1px solid #d4af37;
        width: 100%;
      }
      @media (max-width: 991px) {
        .sidebar { min-height: auto; width: 100%; position: relative; }
        main { margin-left: 0; width: 100%; max-width: 100%; padding: 2rem 1rem; }
        .dashboard-header { flex-direction: column; width: 100%; max-width: 100%; padding: 1.5rem 1rem; }
        .card { max-width: 100%; padding: 2.5rem 1.5rem; }
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block sidebar py-4">
          <div class="brand">
            <i class="fas fa-book-reader"></i>
            <span style="font-family: 'Playfair Display', serif;">Biblioteca</span>
          </div>
          <div class="user-info text-center mb-4">
            <h5>Edinson Berrio</h5>
            <small>Administrador</small>
          </div>
          <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link" href="/"><i class="fa fa-home me-2"></i>Dashboard</a></li>
            <li class="nav-item"><a class="nav-link" href="#"><i class="fa fa-book me-2"></i>Préstamos</a></li>
            <li class="nav-item"><a class="nav-link" href="/authors"><i class="fa fa-users me-2"></i>Autores</a></li>
            <li class="nav-item"><a class="nav-link active" href="/editorials"><i class="fa fa-list-alt me-2"></i>Editoriales</a></li>
            <li class="nav-item"><a class="nav-link" href="/books"><i class="fa fa-book-open me-2"></i>Libros</a></li>
            <li class="nav-item"><a class="nav-link" href="/categories"><i class="fa fa-cogs me-2"></i>Categorías</a></li>
          </ul>
        </nav>

        <!-- Main -->
        <main class="col-md-10 ms-sm-auto px-md-5 py-4">
          <div class="dashboard-header mb-4">
            <h2 class="mb-0"><i class="fa fa-edit me-2"></i>Editar Editorial</h2>
          </div>

          <% if (messages && messages.error) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i><%- messages.error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
          </div>
          <% } %>

          <div class="card border-0 shadow-sm">
            <div class="card-body">
              <form action="/editorials/update/<%= editorial.id_editorial %>" method="post">
                <div class="mb-3">
                  <label for="name" class="form-label">Nombre de la Editorial:</label>
                  <input 
                    type="text" 
                    class="form-control" 
                    id="name" 
                    name="name" 
                    value="<%= editorial.name %>" 
                    autocomplete="off" 
                    required
                    placeholder="Ingrese el nombre de la editorial"
                  />
                </div>
                <div class="mb-3">
                  <label for="description" class="form-label">Descripción:</label>
                  <textarea class="form-control" id="description" name="description" rows="3" placeholder="Descripción opcional de la editorial"><%= editorial.description %></textarea>
                </div>
                <div class="mb-3">
                  <label for="state" class="form-label">Estado:</label>
                  <select class="form-select" id="state" name="state" required>
                    <option value="1" <%= editorial.state == 1 ? 'selected' : '' %>>Activo</option>
                    <option value="0" <%= editorial.state == 0 ? 'selected' : '' %>>Inactivo</option>
                  </select>
                </div>
                <div class="d-flex justify-content-between">
                  <a href="/editorials" class="btn btn-danger">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                  </a>
                  <button type="submit" class="btn btn-primary">
                    <i class="fas fa-floppy-disk me-2"></i>Guardar Cambios
                  </button>
                </div>
              </form>
            </div>
          </div>
        </main>
      </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Footer -->
    <footer class="footer mt-5">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <hr class="footer-divider">
            <div class="d-flex justify-content-center align-items-center py-3">
              <i class="fas fa-book-reader text-muted me-2"></i>
              <span class="text-muted">Biblioteca © 2025 | Desarrollado por el Ing. Edinson Berrio</span>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
