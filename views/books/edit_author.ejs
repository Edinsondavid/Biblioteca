<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Panel Principal - Biblioteca</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <style>
      body {
        background-color: #0f111b;
        color: #f0e6d2;
        font-family: 'Poppins', sans-serif;
      }
      .sidebar {
        min-height: 100vh;
        background-color: #15161d;
        color: #f0e6d2;
        padding-top: 1rem;
      }
      .sidebar .nav-link,
      .sidebar .nav-link i {
        color: #f0e6d2;
      }
      .sidebar .nav-link.active {
        background-color: #d4af37;
        color: #0f111b;
        border-radius: 5px;
      }
      .sidebar .nav-link:hover {
        background-color: #b6932a;
        color: #0f111b;
        border-radius: 5px;
      }
      .brand {
        font-family: 'Brush Script MT', cursive;
        font-size: 2rem;
        color: #d4af37;
        margin-bottom: 2rem;
        letter-spacing: 1px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      .brand i {
        font-size: 1.8rem;
        color: #d4af37;
      }
      .dashboard-header {
        background-color: #d4af37;
        color: #0f111b;
        padding: 1.5rem 2rem;
        border-radius: 0 0 1rem 1rem;
        margin-bottom: 2rem;
      }
      .card {
        background-color: #1a1b23;
        color: #f0e6d2;
        border: none;
        border-radius: 0.5rem;
        box-shadow: 0 0 10px rgb(212 175 55 / 0.2);
      }
      .card .form-label {
        color: #d4af37;
        font-weight: 600;
      }
      .form-control,
      .form-select {
        background-color: #15161d;
        color: #f0e6d2;
        border: 1px solid #d4af37;
      }
      .form-control:focus,
      .form-select:focus {
        background-color: #23243a;
        color: #f0e6d2;
        border-color: #d4af37;
        box-shadow: 0 0 8px #d4af37aa;
      }
      .btn-success {
        background-color: #d4af37;
        border: none;
        color: #0f111b;
        font-weight: 600;
        transition: background-color 0.3s ease;
      }
      .btn-success:hover {
        background-color: #b6932a;
      }
      .btn-danger {
        background-color: #a83232;
        border: none;
        color: #f0e6d2;
        font-weight: 600;
        transition: background-color 0.3s ease;
      }
      .btn-danger:hover {
        background-color: #7d2424;
      }
      .user-info {
        font-size: 1rem;
        margin-bottom: 2rem;
        text-align: center;
      }
      .user-info .fa-user-circle {
        font-size: 2rem;
        margin-right: 0.5rem;
        color: #d4af37;
      }
      a.nav-link {
        display: flex;
        align-items: center;
      }
      a.nav-link i {
        margin-right: 0.75rem;
      }
      footer.footer {
        background-color: #15161d;
        color: #d4af37;
        padding: 1rem 0;
        text-align: center;
        margin-top: 3rem;
        font-size: 0.9rem;
        border-top: 1px solid #2a2a2a;
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-2 d-none d-md-block sidebar py-4">
          <div class="text-center brand mb-4">
            <i class="fas fa-book-reader"></i>
            Biblioteca
          </div>
          <div class="user-info">
            <i class="fa fa-user-circle"></i> <strong>Edinson Berrio</strong><br />
            <span style="font-size:0.9rem;">Administrador</span>
          </div>
          <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link" href="/"><i class="fa fa-home"></i>Dashboard</a></li>
            <li class="nav-item"><a class="nav-link" href="#"><i class="fa fa-book"></i>Préstamos</a></li>
            <li class="nav-item"><a class="nav-link active" href="/authors"><i class="fa fa-users"></i>Autores</a></li>
            <li class="nav-item"><a class="nav-link" href="editorials"><i class="fa fa-list-alt"></i>Editoriales</a></li>
            <li class="nav-item"><a class="nav-link" href="books"><i class="fa fa-book-open"></i>Libros</a></li>
            <li class="nav-item"><a class="nav-link" href="categories"><i class="fa fa-cogs"></i>Categorías</a></li>
          </ul>
        </nav>

        <!-- Main content -->
        <main class="col-md-10 ms-sm-auto px-md-5 py-4">
          <div class="dashboard-header mb-4">
            <h2 class="mb-0"><i class="fa fa-plus-circle me-2"></i>Agregar Nuevo Autor</h2>
          </div>

          <% if (messages.error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <i class="fas fa-exclamation-circle me-2"></i><%- messages.error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
          <% } %>

          <div class="card shadow-sm">
            <div class="card-body">
              <form action="/authors/add" method="post">
                <div class="mb-3">
                  <label for="name" class="form-label">Nombre del Autor:</label>
                  <input
                    type="text"
                    class="form-control"
                    id="name"
                    name="name"
                    value="<%= locals.name || '' %>"
                    autocomplete="off"
                    required
                    placeholder="Ingrese el nombre completo del autor"
                  />
                </div>

                <div class="mb-3">
                  <label for="state" class="form-label">Estado:</label>
                  <select class="form-select" id="state" name="state" required>
                    <option value="1" selected>Activo</option>
                    <option value="0">Inactivo</option>
                  </select>
                </div>

                <div class="d-flex justify-content-between">
                  <a href="/authors" class="btn btn-danger">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                  </a>
                  <button type="submit" class="btn btn-success">
                    <i class="fas fa-floppy-disk me-2"></i>Guardar Autor
                  </button>
                </div>
              </form>
            </div>
          </div>
        </main>
      </div>
    </div>

    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Footer -->
    <footer class="footer">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <hr class="footer-divider" />
            <div class="d-flex justify-content-center align-items-center py-3">
              <i class="fas fa-book-reader text-muted me-2"></i>
              <span>Biblioteca © 2025 | Desarrollado por el Ing. Edinson Berrio</span>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
